----------------------------------------------------------------
-- MANTIK (LOGIC)
----------------------------------------------------------------

secretBtn.MouseButton1Click:Connect(function() mainFrame.Visible = not mainFrame.Visible end)

animeBtn.MouseButton1Click:Connect(function()
    pcall(function()
        local tps = {}
        for _, v in pairs(workspace.Map.TPZone:GetChildren()) do if v.Name == "TP" then table.insert(tps, v) end end
        if #tps > 0 then player.Character.HumanoidRootPart.CFrame = tps[math.random(1, #tps)].CFrame * CFrame.new(0, 3, 0) end
    end)
end)

vipBtn.MouseButton1Click:Connect(function()
    pcall(function()
        workspace.Map.VIPZones:ClearAllChildren()
        vipBtn.Text = "SÄ°LÄ°NDÄ° LA"
        task.wait(1)
        vipBtn.Text = "ðŸ‘‘VIP OL(Fakirsin)ðŸ‘‘"
    end)
end)

jumpBtn.MouseButton1Click:Connect(function()
    pcall(function()
        local hum = player.Character:FindFirstChildOfClass("Humanoid")
        if hum then hum.JumpPower = 200 hum.UseJumpPower = true end
        if workspace.Map:FindFirstChild("TopBounds") then workspace.Map.TopBounds:ClearAllChildren() end
        if workspace:FindFirstChild("Ring") then workspace.Ring:ClearAllChildren() end
        if workspace.Map:FindFirstChild("WorldBorder") and workspace.Map.WorldBorder:FindFirstChild("InvisBorder") then
            workspace.Map.WorldBorder.InvisBorder:ClearAllChildren()
        end
        jumpBtn.Text = "UÃ‡UYON LA"
        task.wait(1)
        jumpBtn.Text = "RONALDO JUMP"
    end)
end)

-- SÃ¼rÃ¼kleme
local function drag(o)
    local d, s, p
    o.InputBegan:Connect(function(input) if input.UserInputType == Enum.UserInputType.MouseButton1 then d = true s = input.Position p = o.Position end end)
    UIS.InputChanged:Connect(function(input) if d and input.UserInputType == Enum.UserInputType.MouseMovement then local del = input.Position - s o.Position = UDim2.new(p.X.Scale, p.X.Offset + del.X, p.Y.Scale, p.Y.Offset + del.Y) end end)
    UIS.InputEnded:Connect(function(input) if input.UserInputType == Enum.UserInputType.MouseButton1 then d = false end end)
end
drag(secretBtn) drag(mainFrame)
