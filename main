----------------------------------------------------------------
-- MANTIK (LOGIC)
----------------------------------------------------------------

secretBtn.MouseButton1Click:Connect(function()
    mainFrame.Visible = not mainFrame.Visible
end)

animeBtn.MouseButton1Click:Connect(function()
    pcall(function()
        local tps = {}
        for _, v in pairs(workspace.Map.TPZone:GetChildren()) do 
            if v.Name == "TP" then table.insert(tps, v) end 
        end
        if #tps > 0 then
            player.Character.HumanoidRootPart.CFrame = tps[math.random(1, #tps)].CFrame * CFrame.new(0, 3, 0)
        end
    end)
end)

vipBtn.MouseButton1Click:Connect(function()
    pcall(function()
        workspace.Map.VIPZones:ClearAllChildren()
        vipBtn.Text = "âœ… SÄ°LÄ°NDÄ°"
        wait(1)
        vipBtn.Text = "ðŸ‘‘ VIP SÄ°L ðŸ‘‘"
    end)
end)

local function drag(o)
    local d, s, p
    o.InputBegan:Connect(function(input) if input.UserInputType == Enum.UserInputType.MouseButton1 then d = true s = input.Position p = o.Position end end)
    UIS.InputChanged:Connect(function(input) if d and input.UserInputType == Enum.UserInputType.MouseMovement then local del = input.Position - s o.Position = UDim2.new(p.X.Scale, p.X.Offset + del.X, p.Y.Scale, p.Y.Offset + del.Y) end end)
    UIS.InputEnded:Connect(function(input) if input.UserInputType == Enum.UserInputType.MouseButton1 then d = false end end)
end
drag(secretBtn) drag(mainFrame)
